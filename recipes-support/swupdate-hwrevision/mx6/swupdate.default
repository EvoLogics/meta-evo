SWUPDATE_EVOHW=generic
SWUPDATE_NEXT=$(/sbin/abtool -x 2>/dev/null)
export SWUPDATE_EXTRA_ARGS=" -e ${SWUPDATE_EVOHW},${SWUPDATE_NEXT} --ca-path /etc/ca-certificates/evo-ca-root.crt -p reboot "
export SWUPDATE_MONGOOSE_EXTRA_ARGS="-p 1234"

# workaround to avoid this:
# ERROR : archive_read_next_header(): Pathname can't be converted from UTF-8 to current locale.
export LC_CTYPE=en_US.utf8
export LC_ALL=en_US.utf8
